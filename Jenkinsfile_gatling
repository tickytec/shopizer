pipeline {
    agent any
    stages {
        stage("Build Maven") {
            steps {
                dir('/Users/Mikita_Khatskevich/GatlingTMP2/Gatling_Training_Latest') {
                    sh '/opt/homebrew/bin/mvn -B clean package'
                }
            }
        }
        stage("Run Gatling") {
            steps {
                dir('/Users/Mikita_Khatskevich/GatlingTMP2/Gatling_Training_Latest') {
                    sh '/opt/homebrew/bin/mvn gatling:test'
                }
            }
            post {
                always {
                      gatlingArchive()
                }
            }
        }
    }
}

