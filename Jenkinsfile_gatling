pipeline {
    agent any
    stages {
        stage("Build Maven") {
            steps {
                dir('/Users/Mikita_Khatskevich/GatlingTMP2/Gatling_Training_Latest') {
                    sh 'mvn -B clean package'
                }
            }
        }
        stage("Run Gatling") {
            steps {
                dir('/Users/Mikita_Khatskevich/GatlingTMP2/Gatling_Training_Latest') {
                    sh 'mvn gatling:test'
                }
                post {
                    always {
                        gatlingArchive()
                    }
                }
            }
        }
    }
}

